<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script type="text/javascript" src="~/Scripts/onclick.js"></script>
    <link rel="stylesheet" type="text/css" href="~/Content/app.css" />
</head>
<body>

    <header>
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/Home"><img id="logo" src="~/Content/img/Hands2OfferLogo.jpg" /></a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li><a href="/Home/Event" class="upcomingeventLink">Events</a></li>
                        <li><a href="/Home/Project" class="projectLink">Projects</a></li>
                        <!--
                        <li class="dropdown">
                          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dropdown <span class="caret"></span></a>
                          <ul class="dropdown-menu">
                            <li><a href="#">Action</a></li>
                            <li><a href="#">Another action</a></li>
                            <li><a href="#">Something else here</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="#">Separated link</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="#">One more separated link</a></li>
                          </ul>
                        </li>
                        -->
                    </ul>
                    <form class="navbar-form navbar-left">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Search Content">
                        </div>
                        <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search" /></button>
                    </form>
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#"class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span id="navbarfaq" class="glyphicon glyphicon-question-sign"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="#">Get Notification on all upcoming events</a></li>
                                <li><a href="#">Tell my friends about Hands2Offer</a></li>
                                <li><a href="#">Create Your Profile in 3 simple steps</a></li>
                                @*<li role="separator" class="divider"></li>
                                <li><a href="#">Separated link</a></li>*@
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#"class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-phone-alt"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="#">Phone: 980 999 2322</a></li>
                                <li><a href="#">Email: Hands2Offer@gmail.com</a></li>
                            </ul>
                        </li>
                        @{
                            if (Session["UserName"] != null)
                            {
                                string user = Session["UserName"].ToString();
                                string email = Session["EmailAddress"].ToString();
                                <li><a href="/Home/Profiles?email=@email">@user<span class="glyphicon glyphicon-user"></span> </a></li>
                            }
                            else
                            {
                                <li> <a href="/Home/Login">Login</a></li>
                            }                        
                        } 

                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>

    </header>

    <div >
        @RenderBody()
        <hr />
    </div>
    <footer>
        <p> &copy; Hands2Offer 2018</p>
    </footer>

    @RenderSection("scripts", required: false)
</body>
</html>
